<%= form_for @project, url: {action: "create"} do |f| %>
  <%= f.label :title, "Project Title" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :total_days, "Estimated Completion" %>
  <%= f.date_field :total_days %>
  <br>

<!-- Accepts nested attribute for: -->
  <% f.fields_for :features do |nested_form| %>
      <%= nested_form.text_field :title %>
  <% end %>
  <br>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit %>
<% end %>
